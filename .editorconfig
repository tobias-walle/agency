root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
# Keep per-Rust editor behavior aligned with rustfmt defaults
max_line_length = 99

[*.md]
# Allow trailing double-space for line breaks
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = tab
